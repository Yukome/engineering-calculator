<Window x:Class="WpfApp1sem.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1sem"
        mc:Ignorable="d"
        Title="Калькулятор" Height="550" Width="350">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBox Name="calc" Grid.Row="0"  Grid.ColumnSpan="5" FontSize="20" FontFamily="Arial" Foreground="SlateGray" HorizontalAlignment="Stretch" VerticalAlignment="Top" Margin="10" Height="40" TextAlignment="Right"/>
        <TextBox Name="calc2" Grid.Row="1"  Grid.ColumnSpan="5" FontSize="30" FontFamily="Arial" HorizontalAlignment="Stretch" VerticalAlignment="Top" Margin="10" Height="40" TextAlignment="Right"/>
        <Button Grid.Row="2" Grid.Column="0" Background="GhostWhite" FontSize="15" FontFamily="Arial" FontWeight="Bold">sin</Button>
        <Button Grid.Row="2" Grid.Column="1" Background="GhostWhite" FontSize="15" FontFamily="Arial" FontWeight="Bold">π</Button>
        <Button Grid.Row="2" Grid.Column="2" Background="GhostWhite" FontSize="15" FontFamily="Arial" FontWeight="Bold">e</Button>
        <Button Grid.Row="2" Grid.Column="3" Background="GhostWhite" FontSize="15" FontFamily="Arial" FontWeight="Bold">CE</Button>
        <Button Grid.Row="2" Grid.Column="4" Background="GhostWhite" FontSize="15" FontFamily="Arial" FontWeight="Bold">Back</Button>

        <Button Grid.Row="3" Grid.Column="0" Background="GhostWhite" FontSize="15" FontFamily="Arial" FontWeight="Bold">x²</Button>
        <Button Grid.Row="3" Grid.Column="1" Background="GhostWhite" FontSize="15" FontFamily="Arial" FontWeight="Bold">1/x</Button>
        <Button Grid.Row="3" Grid.Column="2" Background="GhostWhite" FontSize="15" FontFamily="Arial" FontWeight="Bold">|x|</Button>
        <Button Grid.Row="3" Grid.Column="3" Background="GhostWhite" FontSize="15" FontFamily="Arial" FontWeight="Bold">cos</Button>
        <Button Grid.Row="3" Grid.Column="4" Background="GhostWhite" FontSize="15" FontFamily="Arial" FontWeight="Bold">tg</Button>

        <Button Grid.Row="4" Grid.Column="0" Background="GhostWhite" FontSize="15" FontFamily="Arial" FontWeight="Bold">√x</Button>
        <Button Grid.Row="4" Grid.Column="1" Background="GhostWhite" FontSize="15" FontFamily="Arial" FontWeight="Bold">(</Button>
        <Button Grid.Row="4" Grid.Column="2" Background="GhostWhite" FontSize="15" FontFamily="Arial" FontWeight="Bold">)</Button>
        <Button Grid.Row="4" Grid.Column="3" Background="GhostWhite" FontSize="15" FontFamily="Arial" FontWeight="Bold">n!</Button>
        <Button Grid.Row="4" Grid.Column="4" Background="GhostWhite" FontSize="15" FontFamily="Arial" FontWeight="Bold" Click="Button_Click_division">÷</Button>

        <Button Grid.Row="5" Grid.Column="0" Background="GhostWhite" FontSize="15" FontFamily="Arial" FontWeight="Bold">xʸ</Button>
        <Button Grid.Row="5" Grid.Column="1" Background="GhostWhite" FontSize="15" FontFamily="Arial" FontWeight="Bold" Click="Button_Click_7">7</Button>
        <Button Grid.Row="5" Grid.Column="2" Background="GhostWhite" FontSize="15" FontFamily="Arial" FontWeight="Bold" Click="Button_Click_8">8</Button>
        <Button Grid.Row="5" Grid.Column="3" Background="GhostWhite" FontSize="15" FontFamily="Arial" FontWeight="Bold" Click="Button_Click_9">9</Button>
        <Button Grid.Row="5" Grid.Column="4" Background="GhostWhite" FontSize="15" FontFamily="Arial" FontWeight="Bold" Click="Button_Click_multiplier">×</Button>

        <Button Grid.Row="6" Grid.Column="0" Background="GhostWhite" FontSize="15" FontFamily="Arial" FontWeight="Bold">10ˣ</Button>
        <Button Grid.Row="6" Grid.Column="1" Background="GhostWhite" FontSize="15" FontFamily="Arial" FontWeight="Bold" Click="Button_Click_4">4</Button>
        <Button Grid.Row="6" Grid.Column="2" Background="GhostWhite" FontSize="15" FontFamily="Arial" FontWeight="Bold" Click="Button_Click_5">5</Button>
        <Button Grid.Row="6" Grid.Column="3" Background="GhostWhite" FontSize="15" FontFamily="Arial" FontWeight="Bold" Click="Button_Click_6">6</Button>
        <Button Grid.Row="6" Grid.Column="4" Background="GhostWhite" FontSize="15" FontFamily="Arial" FontWeight="Bold" Click="Button_Click_minus">-</Button>

        <Button Grid.Row="7" Grid.Column="0" Background="GhostWhite" FontSize="15" FontFamily="Arial" FontWeight="Bold">log</Button>
        <Button Grid.Row="7" Grid.Column="1" Background="GhostWhite" FontSize="15" FontFamily="Arial" FontWeight="Bold" Click="Button_Click_1">1</Button>
        <Button Grid.Row="7" Grid.Column="2" Background="GhostWhite" FontSize="15" FontFamily="Arial" FontWeight="Bold" Click="Button_Click_2">2</Button>
        <Button Grid.Row="7" Grid.Column="3" Background="GhostWhite" FontSize="15" FontFamily="Arial" FontWeight="Bold" Click="Button_Click_3">3</Button>
        <Button Grid.Row="7" Grid.Column="4" Background="GhostWhite" FontSize="15" FontFamily="Arial" FontWeight="Bold" Click="Button_Click_plus">+</Button>

        <Button Grid.Row="8" Grid.Column="0" Background="GhostWhite" FontSize="15" FontFamily="Arial" FontWeight="Bold">ln</Button>
        <Button Grid.Row="8" Grid.Column="1" Background="GhostWhite" FontSize="15" FontFamily="Arial" FontWeight="Bold">+/-</Button>
        <Button Grid.Row="8" Grid.Column="2" Background="GhostWhite" FontSize="15" FontFamily="Arial" FontWeight="Bold" Click="Button_Click_0">0</Button>
        <Button Grid.Row="8" Grid.Column="3" Background="GhostWhite" FontSize="15" FontFamily="Arial" FontWeight="Bold">,</Button>
        <Button Grid.Row="8" Grid.Column="4" Background="CadetBlue" FontSize="15" FontFamily="Arial" FontWeight="Bold">=</Button>
    </Grid>
</Window>
